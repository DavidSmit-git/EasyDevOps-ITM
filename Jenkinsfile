pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Bezig met het bouwen van de applicatie...'
                // Hier komt later je 'dotnet build' commando
            }
        }
        stage('Test') {
            steps {
                echo 'Bezig met het uitvoeren van tests...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Bezig met deployen...'
            }
        }
    }
}
